<!DOCTYPE html>
<html>
  <head>
    <title>Wreckerbeamish</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div id="flex-content-container">
        <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to 'WB', root_url, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item">
              <%= link_to 'Photography Packages', packages_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Products', products_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Community', community_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
             <li class="nav-item">
              <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
             </li>
              <li class="nav-item">
                <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </nav>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
     </div>

    <div id="footer">
      <div class="container">
       <div class="row">
      <div class="col-12 col-sm-3">
        <b>Shop Owners</b>
        <br />
        <%= link_to 'Sell your Stuff!', new_owner_product_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-12 col-sm-3">
        <b>More Links</b>
        <br />
        <%= link_to 'Behind the Lens', contact_path %>
        <br />
        <%= link_to 'Community', community_path %>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %> 
      </div>
      <div class="col-12 col-sm-3">
        <b>Contact</b>
        <br />
        WreckerBeamish@email.com
        <br />
        Somewhere
        <br />
        Austin, TX 78746
      </div>
      <div class="col-12 col-sm-3 social">
        <b>Social</b>
        <br />
        <br />
        <%= link_to 'http://github.com/emerymiya' do %>
          <span class="fa fa-github-square fa-2x social-button"></span>
        <% end %>
        <span class="fa fa-facebook-square fa-2x social-button"></span>
        <span class="fa fa-twitter-square fa-2x social-button"></span>
      </div>
    </div>
      </div>
    </div>
  </body>
</html>